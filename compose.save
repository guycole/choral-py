# docker-compose.yml

version: '3'

services:
  django:
    container_name: choral_web
    image: choral_web_image
    build: .
    command: python manage.py migrate --noinput
    command: python manage.py runserver 0.0.0.0:8000
    environment:
      - SECRET_KEY=changemeinprod
    ports:
      - '8080:8000'

    image: httpd
    depends_on:
      - postgres
    networks:
      - choral_net
  depends_on:
    - postgres

  postgres:
    restart: always
    image: postgres:9.6.1
    container_name: choral_db
    environment:
      - POSTGRES_PASSWORD=notapassword
    networks:
      - choral_net
    volumes:
      - choral_data:/var/docker/choral

networks:
  choral_net:
volumes:
  choral_data:
